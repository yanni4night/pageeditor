<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>{{ pageName }}</title>
    <meta name="author" content="yanni4night@gmail.com"/>
    <link rel='stylesheet' href='/stylesheets/fields.css'/>
    <script type="text/javascript" src="/javascripts/jquery-2.1.1.min.js"></script>
  </head>
  <body>
    <form action="/preview" target="_blank" autocomplete="off" method="post">
      <input type="hidden" name="f" value="{{f}}"/>
      {{#fields}}
      <div class="row">
          {{#string}}
          <input type="text" name="{{name}}" required="required" data-type="{{string}}" placeholder="{{desc}}"/><b class="tip"></b>
          {{/string}}

          {{#color}}
          <label for="">{{desc}}</label>
          <input type="color" name="{{name}}" required="required"/>
          {{/color}}

          {{#boolean}}
          <label for="">{{desc}}</label>
          <input type="checkbox" name="{{name}}"/>
          {{/boolean}}
      </div>
      {{/fields}}
      <span id="checkUrl" class="url hide">{{{url}}}</span>
      <div class="row">
        <button type="submit">预览</button>
        <button type="button">生成</button>
      </div>
    </form>
    <script>var checkUrl = {{checkUrl}};</script>
    <script src="/javascripts/fields.js"></script>
  </body>
</html>